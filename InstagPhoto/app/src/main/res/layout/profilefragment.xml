<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/ivCoverPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/default_cover_photo"
                        android:scaleType="fitXY" />

                    <ProgressBar
                        android:id="@+id/pbCoverPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/editCoverPhoto"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="right"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_marginTop="155dp"
                        android:background="@drawable/edit_box_border"
                        android:drawablePadding="@dimen/_5dp"
                        android:drawableRight="@drawable/ic_camera_black"
                        android:drawableTint="@color/black"
                        android:gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="EDIT"
                        android:textColor="@color/black"
                        android:textSize="12sp" />


                    <FrameLayout
                        android:id="@+id/flProfile"
                        android:layout_width="@dimen/_100dp"
                        android:layout_height="@dimen/_100dp"
                        android:layout_marginLeft="@dimen/_35dp"
                        android:layout_marginStart="@dimen/_35dp"
                        android:layout_marginTop="130dp">

                        <ImageView
                            android:id="@+id/ivProfile1"
                            android:layout_width="@dimen/_100dp"
                            android:layout_height="@dimen/_100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/default_profile_photo" />
                        <!-- app:sriv_left_bottom_corner_radius="48dip"
                         app:sriv_left_top_corner_radius="16dip"
                         app:sriv_oval="true"
                         app:sriv_right_bottom_corner_radius="16dip"
                         app:sriv_right_top_corner_radius="0dip"-->

                        <ProgressBar
                            android:id="@+id/pbProfilePhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone" />


                        <TextView
                            android:id="@+id/editProfilePhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="bottom|left"
                            android:background="@drawable/edit_box_border"
                            android:drawablePadding="@dimen/_5dp"
                            android:drawableRight="@drawable/ic_camera_black"
                            android:drawableTint="@color/black"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_5dp"
                            android:text="EDIT"
                            android:textColor="@color/black"
                            android:textSize="10sp" />


                    </FrameLayout>

                    <TextView
                        android:id="@+id/txtUserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginStart="150dp"
                        android:gravity="bottom"
                        android:text="UserName"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </FrameLayout>


                <RelativeLayout
                    android:id="@+id/topHeadview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TableRow
                            android:id="@+id/llpostscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtFriendsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtFollowersCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtFolloweringCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtPostsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Friends"
                                android:textColor="@color/grey1"
                                android:textSize="12sp"
                                android:textStyle="normal" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Followers"
                                android:textColor="@color/grey1"
                                android:textSize="12sp"
                                android:textStyle="normal" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Following"
                                android:textColor="@color/grey1"
                                android:textSize="12sp"
                                android:textStyle="normal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Post"
                                android:textColor="@color/grey1"
                                android:textSize="12sp"
                                android:textStyle="normal" />

                        </TableRow>

                    </TableLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5dp"
                    android:background="@color/litgrey" />

            </LinearLayout>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5dp"
                android:background="@color/white"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:gravity="center"
                            android:paddingLeft="@dimen/_5dp"
                            android:text="Additional Information"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:visibility="gone" />


                        <RelativeLayout
                            android:id="@+id/editProfileDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true">

                            <TextView
                                android:id="@+id/txtProfileMobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/_5dp"
                                android:background="@color/white"
                                android:drawableLeft="@drawable/ic_phone_iphone_black_24dp"
                                android:drawablePadding="@dimen/_5dp"
                                android:drawableTint="@color/grey"
                                android:gravity="left|center"
                                android:hint="911234567890"
                                android:maxLines="1"
                                android:padding="@dimen/_5dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:visibility="visible" />


                            <TextView
                                android:id="@+id/btnEditProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginEnd="@dimen/_2dp"
                                android:layout_marginRight="@dimen/_2dp"
                                android:layout_toLeftOf="@+id/ivEdit"
                                android:layout_toStartOf="@+id/ivEdit"
                                android:gravity="center"
                                android:padding="@dimen/_5dp"
                                android:text="Edit Details"
                                android:textAllCaps="false"
                                android:textColor="@color/colorPrimary"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/ivEdit"
                                android:layout_width="@dimen/_15dp"
                                android:layout_height="@dimen/_15dp"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="@dimen/_5dp"
                                android:layout_marginRight="@dimen/_5dp"
                                android:src="@drawable/edit"
                                android:tint="@color/colorPrimary" />
                        </RelativeLayout>

                    </RelativeLayout>


                    <TextView
                        android:id="@+id/txtBiography"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/chat_talk"
                        android:drawablePadding="@dimen/_5dp"
                        android:drawableTint="@color/grey"
                        android:gravity="left|center"
                        android:hint="Bio-Info"
                        android:maxLength="150"
                        android:padding="@dimen/_5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                    <TextView
                        android:id="@+id/txtProfileEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/sent_mail"
                        android:drawablePadding="@dimen/_5dp"
                        android:drawableTint="@color/grey"
                        android:gravity="left|center"
                        android:hint="xrsoftwares@gmail.com"
                        android:maxLines="1"
                        android:padding="@dimen/_5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtProfileLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/ic_home_black_24dp"
                        android:drawablePadding="@dimen/_5dp"
                        android:drawableTint="@color/grey"
                        android:gravity="left|center"
                        android:hint="Tamilnadu, India"
                        android:padding="@dimen/_5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtProfileWebInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:background="@color/white"
                        android:drawableLeft="@drawable/ic_public_black_24dp"
                        android:drawablePadding="@dimen/_5dp"
                        android:drawableTint="@color/grey"
                        android:gravity="left|center"
                        android:hint="Website info"
                        android:maxLength="150"
                        android:padding="@dimen/_5dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtProfilePages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_5dp"
                        android:paddingRight="@dimen/_5dp"
                        android:text="My Pages"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txtProfilePagesLable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_5dp"
                        android:paddingRight="@dimen/_5dp"
                        android:text="No pages available"
                        android:textColor="@color/black1"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                    <ListView
                        android:id="@+id/listview_business_pages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginStart="@dimen/_5dp"
                        android:divider="@color/white" />

                    <TextView
                        android:id="@+id/txtProfileGroups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:background="@color/white"
                        android:gravity="left"
                        android:paddingLeft="@dimen/_8dp"
                        android:paddingTop="@dimen/_3dp"
                        android:text="My Groups"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtProfileGroupsLable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_5dp"
                        android:background="@color/white"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_5dp"
                        android:paddingRight="@dimen/_5dp"
                        android:text="No groups available"
                        android:textColor="@color/black1"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:visibility="visible" />


                    <ListView
                        android:id="@+id/listview_Groups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginStart="@dimen/_5dp"
                        android:divider="@color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_10dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnBusinessPage"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:layout_weight="1"
                            android:background="@color/participant_view_selected"
                            android:gravity="center"
                            android:padding="@dimen/_8dp"
                            android:text="Business Page"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <Button
                            android:id="@+id/btnBusinessGroup"
                            android:layout_width="0dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:layout_weight="1"
                            android:background="@color/participant_view_selected"
                            android:gravity="center"
                            android:padding="@dimen/_8dp"
                            android:text="Groups"
                            android:textColor="@color/white"

                            android:textSize="14sp"
                            android:textStyle="normal" />


                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_5dp"
                android:layout_marginLeft="@dimen/_5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:background="@color/blue"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@color/profile_title"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:layout_marginStart="@dimen/_5dp"
                            android:padding="@dimen/_5dp"
                            android:text="Friends"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/badge_friends"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:background="@drawable/round_count"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="gone" />


                    </LinearLayout>


                    <com.instag.vijay.fasttrending.view.ExpandableHeightGridView
                        android:id="@+id/gv_friends_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_8dp"
                        android:fadingEdge="none"
                        android:horizontalSpacing="@dimen/_2dp"
                        android:numColumns="4"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="@dimen/_10dp" />

                    <TextView
                        android:id="@+id/txt_see_all_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_15dp"
                        android:gravity="center"
                        android:text="See all friends >>"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5dp"
                android:background="@color/blue"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@color/profile_title"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:layout_marginStart="@dimen/_5dp"
                            android:padding="@dimen/_5dp"
                            android:text="Following"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/badge_following"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5dp"
                            android:background="@drawable/round_count"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:visibility="gone" />


                    </LinearLayout>


                    <com.instag.vijay.fasttrending.view.ExpandableHeightGridView
                        android:id="@+id/gv_following_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5dp"
                        android:layout_marginRight="@dimen/_5dp"
                        android:layout_marginTop="@dimen/_8dp"
                        android:fadingEdge="none"
                        android:horizontalSpacing="@dimen/_2dp"
                        android:numColumns="4"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="@dimen/_10dp" />

                    <TextView
                        android:id="@+id/txt_see_all_followings"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_15dp"
                        android:gravity="center"
                        android:text="See all followings >>"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/_5dp"
                android:background="@color/blue"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_10dp"
                app:cardElevation="@dimen/_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="@color/profile_title"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
