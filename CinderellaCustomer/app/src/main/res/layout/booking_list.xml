<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_edge"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green2"
                android:text="Request Date :"
                android:padding="5dp"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green2"
                android:text="Request No :"
                android:gravity="right"
                android:textSize="20dp"
                android:padding="5dp"
                android:layout_weight="2"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/sky_blue"
                android:text="Date"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textSize="20dp"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/txt_unique_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/sky_blue"
                android:text="Request No :"
                android:textSize="20dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_weight="2"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_margin="5dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/hint_2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textColor="@color/green2"
            android:text="SCHEDULED PICKUP DATE"
            android:padding="5dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textStyle="bold|italic"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="SCHEDULED PICKUP DATE"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@color/hint_2"/>
        <TextView
            android:id="@+id/txt_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALL CINDERELLA AND RESCHEDULE"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:background="@drawable/pressed"
            android:drawableLeft="@mipmap/contact_us"
            android:layout_margin="10dp"
            android:textColor="@color/kpf_bg2"
            android:textStyle="bold|italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Status"
                android:layout_weight="2"
                android:textColor="@color/black_2"
                android:background="@color/profile_back"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/txt_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cancel"
                android:layout_weight="2"
                android:textColor="@color/black_2"
                android:background="@color/profile_back"
                android:textStyle="bold"
                android:padding="10dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:text="Bill"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/edt_rounded_edge"
            />

    </LinearLayout>

</LinearLayout>