<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvGallery"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3dp"
    android:visibility="visible"
    app:cardCornerRadius="@dimen/_10dp"
    app:cardElevation="@dimen/_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_5dp">

        <View
            android:id="@+id/colorview"
            android:layout_width="7dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_3dp"
            android:layout_marginTop="@dimen/_3dp"
            android:background="@color/orangedark1" />

        <ImageView
            android:id="@+id/postImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_3dp"
            android:layout_marginTop="@dimen/_3dp"
            android:layout_toRightOf="@+id/colorview"
            android:contentDescription="@string/app_name" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/postImg"
            android:layout_toRightOf="@+id/postImg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/_5dp">

            <TextView
                android:id="@+id/categoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Chicken Products"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/categorySubItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Products"
                android:textColor="@color/material_blue_grey_90"
                android:textSize="15sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>