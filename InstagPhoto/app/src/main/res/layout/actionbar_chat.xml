<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentInsetLeft="0dp"
    android:contentInsetStart="0dp"
    android:padding="3dp"
    app:contentInsetEndWithActions="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetStartWithNavigation="0dp">

    <FrameLayout
        android:id="@+id/fl_actionbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_actionbar_alphabet"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/rounded_corner"
            android:gravity="center"
            android:text="A"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_contact_list_item_alphabet"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:visibility="gone"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_5dp"
        android:layout_marginStart="@dimen/_5dp"
        android:layout_toEndOf="@+id/fl_actionbar"
        android:layout_toRightOf="@+id/fl_actionbar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_actionbar_caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kjbhkhjk"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_actionbar_caller_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:text="bkbbhb"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="visible" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_attach"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="start|center"
        android:layout_margin="@dimen/_5dp"
        android:src="@drawable/ic_videocam_black_24dp"
        android:tint="@color/white"
        android:visibility="gone" />

</RelativeLayout>