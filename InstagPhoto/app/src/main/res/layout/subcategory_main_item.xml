<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/blue"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5dp">

            <ImageView
                android:id="@+id/ivSubCat"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_home_black_24dp" />

            <TextView
                android:id="@+id/txtSubCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_4dp"
                android:layout_marginRight="@dimen/_4dp"
                android:layout_toEndOf="@+id/ivSubCat"
                android:layout_toRightOf="@+id/ivSubCat"
                android:drawableRight="@drawable/ic_navigate_next_black_24dp"
                android:gravity="center|left"
                android:maxLines="1"
                android:padding="@dimen/_5dp"
                android:singleLine="true"
                android:text="Coffee shop"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>