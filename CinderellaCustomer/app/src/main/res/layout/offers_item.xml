<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/offer_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivImageOffer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/app_name"
        android:padding="5dp"
        android:src="@drawable/ic_menu_share" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="3dp"
        android:layout_toEndOf="@+id/ivImageOffer"
        android:layout_toRightOf="@+id/ivImageOffer"
        android:gravity="center">

        <TextView
            android:id="@+id/txtOfferTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="top"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/status"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtOfferCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOfferTitle"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtOfferValid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtOfferCode"
            android:gravity="bottom"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#cc000000"
            android:textSize="12sp"
            android:textStyle="normal" />
    </RelativeLayout>

</RelativeLayout>