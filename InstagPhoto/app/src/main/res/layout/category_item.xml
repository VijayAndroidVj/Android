<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@color/white"
    android:elevation="@dimen/_15dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/_5dp"
    app:cardElevation="@dimen/_5dp">

    <RelativeLayout
        android:id="@+id/rlCategory"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_margin="@dimen/_5dp">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/icon" />


        <LinearLayout
            android:id="@+id/llmiddle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/_3dp"
            android:layout_marginStart="@dimen/_3dp"
            android:layout_toEndOf="@+id/ivImage"
            android:layout_toLeftOf="@+id/llrightoption"
            android:layout_toRightOf="@+id/ivImage"
            android:layout_toStartOf="@+id/llrightoption"
            android:gravity="left"
            android:orientation="vertical"
            android:weightSum="4">

            <TextView
                android:id="@+id/shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Shopname"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Address"
                android:textSize="12sp"
                android:textStyle="normal" />


            <TextView
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Mail"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/subcat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="Name"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="visible" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llrightoption"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:padding="@dimen/_2dp">

            <TextView
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="left|center"
                android:text="Name"
                android:textSize="12sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/city"
                android:layout_gravity="center|end"
                android:gravity="left|center"
                android:text="Name"
                android:textSize="12sp"
                android:textStyle="normal" />


            <Button
                android:id="@+id/btnview"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center|center_vertical"
                android:background="@color/participant_view_selected"
                android:gravity="center|center_vertical"
                android:text="view"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible" />


        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>