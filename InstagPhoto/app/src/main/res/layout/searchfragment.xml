<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="160dp">


            <technolifestyle.com.imageslider.FlipperLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/flipper_layout"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

        </android.support.v4.widget.SwipeRefreshLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTitleSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/_10dp"
                android:paddingBottom="@dimen/_3dp"
                android:text="Top Near by Service"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/exploreAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@color/white"
                android:gravity="right"
                android:padding="@dimen/_10dp"
                android:paddingBottom="@dimen/_3dp"
                android:text="EXPLORE ALL"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/viewLineSearch"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bottomline" />


        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:horizontalSpacing="2dp"
            android:padding="@dimen/_5dp"
            android:verticalSpacing="2dp" />
    </LinearLayout>

</LinearLayout>