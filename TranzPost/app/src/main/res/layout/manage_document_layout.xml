                        android:layout_centerInParent="true"
                        android:layout_marginLeft="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_25dp"
                        android:layout_toLeftOf="@+id/editProfile"
                        android:text="Profile"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:textStyle="normal" />


                    <ImageView
                        android:id="@+id/editProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_mode_edit_black_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_viewPhoto"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_25dp"
                        android:padding="5dp"
                        android:visibility="visible"
                        card_view:cardCornerRadius="15dp"
                        card_view:cardElevation="15dp"
                        card_view:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/ivCamPhoto"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_camera_alt_black_24dp"
                                android:tint="@color/password_visibility" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivCamPhoto"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="Photo" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <ImageView
                        android:id="@+id/ivloadPhoto"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:visibility="gone" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:background="@color/cardview_dark_background" />

            </LinearLayout>


            <Button
                android:id="@+id/btnsaveandverify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15dp"
                android:background="@drawable/bg_button"
                android:padding="@dimen/_15dp"
                android:text="Save and Verify"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="visible" />

        </LinearLayout>

    </ScrollView>


    <ProgressBar
        android:id="@+id/pbmanageDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" />

</RelativeLayout>