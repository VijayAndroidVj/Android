<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtPending"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#d68a59"
        android:drawableEnd="@drawable/ic_refresh"
        android:drawableRight="@drawable/ic_refresh"
        android:drawableTint="@color/white"
        android:gravity="center"
        android:text="Verification Pending"
        android:textColor="@color/white" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtPending"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radiotype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_25dp">

                <RadioButton
                    android:id="@+id/radioTransporter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:checked="true"
                    android:padding="@dimen/_5dp"
                    android:text="Transporter" />

                <RadioButton
                    android:id="@+id/radioTruckOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:padding="@dimen/_5dp"
                    android:text="Truck Owner" />

                <RadioButton
                    android:id="@+id/radioTransporterandTruckOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:padding="@dimen/_5dp"
                    android:text="Transporter and Truck Owner" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cardview_dark_background" />

            <LinearLayout
                android:id="@+id/llPanCard"
