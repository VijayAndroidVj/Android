<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="center"
    android:background="@color/colorPrimary"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rlnotifi"
            android:backgroundTint="@color/white"
            android:drawableTint="@color/white"
            android:hint="Search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColorHint="@color/white"
            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/rlnotifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_actionbar_noti"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/iv_actionbar_settings"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_notifications_black"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:tint="@color/white" />

            <ImageView
                android:id="@+id/iv_actionbar_settings"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_more_vert_black"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:tint="@color/white"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>