    android:id="@+id/activity_terms_condition"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg1"
    android:orientation="vertical"
    tools:context="coustomer.cinderella.vajra.cinderellacustomerapp.TermsCondition">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/bg1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Terms &amp; Conditions-Laundry"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/bg1"
                android:text="● Original BILL/SMS needs to be presented at the time of taking delivery of garments. "
                android:textColor="@color/black_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/bg1"
                android:text="● Express / Urgent delivery of garments will be charged 50% extra over the regular tariff. "
                android:textColor="@color/black_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/bg1"
                android:text="● Customers are requested to examine the garments at the time of delivery any damages found after taking delivery we shall not be held responsible for the same."
                android:textColor="@color/black_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/bg1"
                android:text="● Customer should give the garments for rewash within 24 hours from the time of delivery of the garment. No garment will be accepted for rewash without tag ."
                android:textColor="@color/black_2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@color/bg1"
                android:text="● We are not responsible for fastness / running of colour / Shrinkage / damage to embellishments / embroidery work on the garments during process."
                android:textColor="@color/black_2" />

            <TextView
