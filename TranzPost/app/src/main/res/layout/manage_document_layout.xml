<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pbmanageDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radiotype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_25dp">

                <RadioButton
                    android:id="@+id/radioTransporter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:checked="true"
                    android:padding="@dimen/_5dp"
                    android:text="Transporter" />

                <RadioButton
                    android:id="@+id/radioTruckOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:padding="@dimen/_5dp"
                    android:text="Truck Owner" />

                <RadioButton
                    android:id="@+id/radioTransporterandTruckOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:padding="@dimen/_5dp"
                    android:text="Transporter and Truck Owner" />

            </RadioGroup>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/cardview_dark_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginTop="@dimen/_25dp"
                android:text="PAN Card"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:text="(Personal/Company)"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/_25dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:padding="5dp"
                    android:visibility="visible"
                    card_view:cardCornerRadius="15dp"
                    card_view:cardElevation="15dp"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/ivCamPanCard"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_camera_alt_black_24dp"
                            android:tint="@color/password_visibility" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivCamPanCard"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="PAN Card" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <ImageView
                    android:id="@+id/ivloadCamPanCard"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera_alt_black_24dp"
                    android:visibility="gone" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@color/cardview_dark_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15dp"
                android:layout_marginTop="@dimen/_25dp"
                android:text="Address Proof"
                android:textColor="@color/colorAccent"
                android:textSize="20sp"
                android:textStyle="normal" />

            <RadioGroup
                android:id="@+id/radioAddresstype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_1dp">

                <RadioButton
                    android:id="@+id/radioDrivingLicence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:checked="true"
                    android:padding="@dimen/_5dp"
                    android:text="Driving License" />

                <RadioButton
                    android:id="@+id/radioAadharCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:padding="@dimen/_5dp"
                    android:text="Aadhar Card" />

                <RadioButton
                    android:id="@+id/radioVoterId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:padding="@dimen/_5dp"
                    android:text="Voter ID" />

                <RadioButton
                    android:id="@+id/radioOthers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:padding="@dimen/_5dp"
                    android:text="Others" />


                <RadioButton
                    android:id="@+id/radioPassport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10dp"
                    android:padding="@dimen/_5dp"
                    android:text="Passport" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_address"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/_25dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:padding="5dp"
                    android:visibility="visible"
                    card_view:cardCornerRadius="15dp"
                    card_view:cardElevation="15dp"
                    card_view:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_15dp">

                        <ImageView
                            android:id="@+id/ivCamAddressProof"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/ic_camera_alt_black_24dp"
                            android:tint="@color/password_visibility" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/ivCamAddressProof"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"
                            android:text="Proof of Address" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <ImageView
                    android:id="@+id/ivloadCamProof"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_camera_alt_black_24dp"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/_15dp"
                android:background="@color/cardview_dark_background" />

            <LinearLayout
                android:id="@+id/llVisiting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_25dp"
                    android:text="Visiting Card"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15dp"
                    android:text="(of your transport firm)"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/til_transport_firm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    app:errorEnabled="true">


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/et_transport_firm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/transport_filr"
                        android:inputType="text"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="@dimen/fs_16" />

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/card_view_visiting"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/_25dp"
                        android:layout_marginTop="@dimen/_15dp"
                        android:padding="5dp"
                        android:visibility="visible"
                        card_view:cardCornerRadius="15dp"
                        card_view:cardElevation="15dp"
                        card_view:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/ivCamVisitingCard"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_camera_alt_black_24dp"
                                android:tint="@color/password_visibility" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ivCamVisitingCard"
                                android:layout_centerHorizontal="true"
                                android:gravity="center"
                                android:text="Visiting Card" />
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <ImageView
                        android:id="@+id/ivloadVisiting"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_camera_alt_black_24dp"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="@dimen/_15dp"
                    android:background="@color/cardview_dark_background" />
            </LinearLayout>

            <Button
                android:id="@+id/btnsaveandverify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15dp"
                android:background="@drawable/bg_button"
                android:padding="@dimen/_15dp"
                android:text="Save and Verify"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>