<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vajralabs.uniroyal.uniroyal">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Network State Permissions -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.NETWORK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/uniroyallogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/uniroyallogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AboutUs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.ContactUs"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".activity.Mission"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.Enquiry"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".activity.DownloadCatelog"
            android:theme="@style/AppTheme1" />
    </application>

</manifest>