<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xr.vijay.tranzpost">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/tplogo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tplogo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PhoneNumberAuthentication"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".MainActivity"
            android:persistent="true"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".VerificationActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".Registration"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".Signin"
            android:theme="@style/AppTheme1" />
        <activity
            android:name=".HaltingPriceActivity"
            android:theme="@style/AppTheme1" />

        <activity
            android:name=".MyProfileActivity"
            android:theme="@style/AppTheme1" />

        <activity
            android:name=".ManageDocument"
            android:theme="@style/AppTheme1" />

        <activity
            android:name=".ContactUs"
            android:theme="@style/AppTheme1" />

        <activity
            android:name=".Document_Preview"
            android:theme="@style/AppTheme1" />

        <activity
            android:name=".TruckSettings"
            android:theme="@style/AppTheme1" />
    </application>

</manifest>