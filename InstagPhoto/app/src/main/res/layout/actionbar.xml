<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="center"
    android:background="@drawable/border_bg_prescription_list_actionbar"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5dp">


        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/app_name"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_camera_black"
            android:tint="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5dp"
            android:gravity="center"
            android:maxLines="1"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edtsearchview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rlnotifi"
            android:layout_toStartOf="@+id/rlnotifi"
            android:background="@drawable/search_background"
            android:drawableLeft="@drawable/ic_search_black"
            android:drawablePadding="@dimen/_5dp"
            android:drawableStart="@drawable/ic_search_black"
            android:drawableTint="@color/black"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center|left"
            android:hint="Search"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="@dimen/_5dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/searchview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_3dp"
            android:layout_toLeftOf="@+id/rlnotifi"
            android:layout_toStartOf="@+id/rlnotifi"
            android:background="@drawable/search_background"
            android:drawableLeft="@drawable/ic_search_black"
            android:drawablePadding="@dimen/_5dp"
            android:drawableStart="@drawable/ic_search_black"
            android:drawableTint="@color/black"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center|left"
            android:hint="Search"
            android:padding="@dimen/_7dp"
            android:textColor="@color/black"
            android:textColorHint="@color/grey"
            android:textSize="14sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/rlnotifi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/iv_actionbar_peoples_group"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_group_black_24dp"
                android:tint="@color/black"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_actionbar_peoples"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_person_black"
                android:tint="@color/black"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/iv_actionbar_noti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5dp">


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_5dp"
                    android:src="@drawable/ic_notifications_black"
                    android:tint="@color/black" />

                <TextView
                    android:id="@+id/badge_noti"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:background="@drawable/round_count"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </FrameLayout>

            <ImageView
                android:id="@+id/iv_actionbar_settings"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:src="@drawable/ic_more_vert_black"
                android:tint="@color/black"
                android:visibility="visible" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>