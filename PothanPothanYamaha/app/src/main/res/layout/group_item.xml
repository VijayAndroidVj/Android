<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/invite_title"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/tv_report_adapter_item_notes_count"
        android:layout_toStartOf="@+id/tv_report_adapter_item_notes_count"
        android:gravity="center"
        android:padding="3dp"
        android:text="Documents"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="normal" />


    <TextView
        android:id="@+id/tv_report_adapter_item_notes_count"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_corner_blue"
        android:gravity="center"
        android:padding="3dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12sp" />


</RelativeLayout>