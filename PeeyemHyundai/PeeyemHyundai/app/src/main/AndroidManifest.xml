<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.peeyem.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.peeyemcar.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.peeyemcar.MainActivity" />

        <activity
            android:name="com.peeyemcar.WebViewActivity"
            android:label="@string/title_activity_about_us"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.peeyemcar.EMICalculator"
            android:label="EMI Calculatore"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.peeyemcar.AboutUs"
            android:label="@string/title_activity_about_us"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.peeyemcar.ProductsListActivity"
            android:label="@string/title_activity_product"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.peeyemcar.DownloadListActivity"
            android:label="@string/title_activity_download"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.peeyemcar.ViewPDFActivity"
            android:label="@string/title_activity_view_pdf"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.peeyemcar.Service"
            android:label="@string/title_activity_service"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.peeyemcar.TestDrive"
            android:label="@string/title_activity_testdrive"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.peeyemcar.ContactUs"
            android:label="Contact Us"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>